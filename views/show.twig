<html>
  <head>
    <title>Showdata</title>
    <style>
          th {
        background-color: #4CAF50;
        color: white;
      }
          table {
        width: 100%;
      }

      th {
        height: 50px;
      }
            th, td {
        border-bottom: 1px solid #ddd;
      }
      tr:hover {background-color: #f5f5f5;}
      #del_btn:hover {background-color: tomato;}
      #edt_btn:hover {background-color: skyblue;}
      button:hover{background-color: green;}
    </style>

  </head>
<body>
    <center>
    <h1>SUBMITTED DATA</h1>
      <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Message</th>
        <th colspan='2'>Operations</th>
      </tr>
      {% for d in data %}
      <tr>
          <td>{{d.name}}</td>
          <td>{{d.email}}</td>
          <td>{{d.dept}}</td>
          <td>{{d.message}}</td>
          <td><button id="del_btn"><a href="/deldata/{{d._id}}">DELETE</a></button></td>
          <td><button id="edt_btn"><a href="/edit/{{d._id}}">EDIT</a></button></td>
      </tr>
      {% endfor %}
      </table>
      <button><a href="/">Add More Data</a></button>
    </center>

</body>
</html>
